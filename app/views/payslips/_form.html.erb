<%= form_for @payslip do |f|%>
      <tr>
        <td><%= f.label "Generate for"%></td>
        <td><%= f.select :month, [['Month',0],['January',1],['February',2],['March',3],['April',4],['May',5],['June',6],['July',7],['August',8],['September',9],['October',10],['November',11],['December',12]]%></td>
        <td><%= f.label "Year"%></td>
        <td><%= f.number_field :year, :min=>(@user.date_of_joining.strftime("%Y").to_i), :max=>(Time.now.strftime("%Y").to_i)%></td>
      </tr>
      <tr>
          <td><%= f.label "Gross Salary "%></td>
          <td><%= f.number_field :gross, :min => 0 %>
      <span style="color:black;"><%= @payslip.errors[:gross][0] rescue nil%></span></td>
      </tr>
       <tr>
      <td colspan="4" style="color: #3b5998;"><label><h4><b>ADDITIONS</b></h4></label></td>
  </tr>
</tr>
     <tr>
    <td><%= f.label "Reimbursement "%></td>
    <td><%= f.number_field :reim, :min => 0 %>
       <span style="color:black;"><%= @payslip.errors[:reim][0] rescue nil%></span></td>
  </tr>
    <tr>
      <td colspan="4" style="color: #3b5998;"><label><h4><b>DEDUCTIONS</b></h4></label></td>
  </tr>
  <tr>
    <td><%= f.label "Leaves in a month"%></td>
    <td><%= f.number_field :lop, :min => 0 %> 
       <span style="color:black;"><%= @payslip.errors[:lop][0] rescue nil%></span></td>
    <td><%= f.label "Other Deductions "%></td>
    <td><%= f.number_field :od, :min => 0, :required => true%>
       <span style="color:black;"><%payslip.errors[:od][0] rescue nil%></span></td>
  </tr>
  <tr>
    <td><%= f.submit "Submit", :class => "links" %></td>
  </tr>
</table>
<% end %>
     